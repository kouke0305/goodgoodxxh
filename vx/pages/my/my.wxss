/* pages/my/my.wxss */
page {
  background: #f2f2f2;
}

/*top*/
.my-container{
  width: 100%;
  /* border: 1px solid red; */
  height: 11rem;
  display: block;
  background-size: 100%;
  background-repeat:no-repeat;
}
.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin: 6rem 0 0 1.5rem;
}
/*楼结构*/
.first{
  display: block;
  width: 95%;
  height: 10rem;
  margin: 0 auto;
  text-align: center;
}
.first1{
  margin-top: 1rem;
}
.first2{
  height: 4rem;
}
.first2-1{
  margin-top: 1.5rem;
}
.first3{
  margin-bottom: 1rem;
}
.two{
  display: block;
  width: 95%;
  height: 5rem;
  margin: 1rem auto;
  text-align: center;
}
.two1{
  margin: 0 auto;
}
.bai{
  display: block;
  background-color: #fff;
  border-radius:10px;
}
.bai1{
  width: 100%;
  height: 10rem;
}
.bai1-2{
  width: 100%;
  height: 4.7rem;
}
.bai2{
  width: 100%;
  height: 5rem;
}

/*楼内部*/
.milk{
  width: 5rem;
  position: relative;
  left: 1rem;
  top: 1rem;
}
.milk-img{
  width: 3rem;
  height: 4rem;
  position: relative;
  left: 2rem;
  top: 3rem;
  margin-bottom: 10px;
}
.milk-img2{
  width: 100%;
  height: 4rem;
}

.stop{
  width: 5rem;
  position: relative;
  left: 0.5rem;
  top: 0.5rem;
}
.stop-img{
  width: 2rem;
  height: 2rem;
  position: relative;
  left: 2.5rem;
  top: -1rem;
}
.stop-img1{
  width: 100%;
  height: 2rem;
  position: relative;
  top: -0.8rem;
}
.stop-img2{
  top: -1.2rem;
}

.order{
  width: 5rem;
  position: relative;
  left: 0.5rem;
  top: 0.5rem;
}
.order-img{
  width:30px;
  height:30px;
  position: relative;
  left: 2.5rem;
  top: -1rem;
}
.order-img1{
  width: 100%;
  height: 2.8rem;
  position: relative;
  top: -1.2rem;
}